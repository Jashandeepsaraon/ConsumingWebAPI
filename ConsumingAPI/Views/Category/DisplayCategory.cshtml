@model List<CategoryViewModel>
@{
    ViewBag.Title = "DisplayCategory";
}

<div>
    <section class="section-padding wow fadeInUp delay-05s">
        <div class="container" style="margin-left: 10px;">
            @if (Model == null || !Model.Any())
            {
                <h3>There is no Category yet.</h3>
                <a href="@Url.Action("CreateCategory", "Category", new { id = ViewBag.HouseHoldId })">+ Create New</a>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="service-title pad-bt15">Latest Category</h2>
                        <hr class="bottom-line">
                    </div>
                    @*@if (Model.FirstOrDefault().IsOwner)
                   {*@
                    <a href="@Url.Action("CreateCategory", "Category", new { id = ViewBag.HouseHoldId })">+ Create New</a>
                    @*}*@
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>DateCreated</th>
                                <th>DateUpdated</th>
                                <th>Edit</th>
                                @*<th>Users List</th>*@
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@record.Name</td>
                                    <td>@record.Description</td>
                                    <td>@record.DateCreated</td>
                                    <td>@record.DateUpdated</td>

                                    @*<td>
                            <form action="@Url.Action("DisplayUsers", "Home", new { id = record.Id })">
                                <button>Users</button>
                            </form>
                        </td>*@
                                    @*@if (record.IsOwner)
                        {*@
                                    <td>
                                        <a href="@Url.Action("EditCategory", "Category", new { id = record.Id })">Edit</a>
                                    </td>
                                    <td>
                                        <form method="post" action="@Url.Action("Delete", "Category", new { id = record.Id })">
                                            <button>Delete</button>
                                        </form>
                                    </td>
                                    @*}*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </section>
</div>

