@model HouseholdsViewModel
@{
    ViewBag.Title = "SingleHousehold";
}

<div>
    <section class="section-padding wow fadeInUp delay-05s">
        <div class="container" style="margin-left: 10px;">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-danger">@TempData["Message"]</div>
            }
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="service-title pad-bt15">Latest HouseHold</h2>
                    <hr class="bottom-line">
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Edit</th>
                            <th>InviteUsers</th>
                            <th>Users List</th>
                            <th>Leave</th>
                            <th>Category</th>
                            <th>BankAccount</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Name</td>
                            <td>
                                @if (Model.IsOwner)
                                {
                                    <a href="@Url.Action("Edit", "Home", new { id = Model.Id })">Edit</a>

                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Invite", "Home", new { id = Model.Id })">Invite Users</a>
                            </td>
                            <td>
                                <form action="@Url.Action("DisplayUsers", "Home", new { id = Model.Id })">
                                    <button>Users</button>
                                </form>
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("Leave", "Home", new { id = Model.Id })">
                                    <button>LeaveHouseHold</button>
                                </form>
                            </td>
                            <td>
                                <a href="@Url.Action("DisplayCategory", "Category", new { id = Model.Id })">Category</a>
                            </td>
                            <td>
                                <a href="@Url.Action("DisplayBankAccount", "BankAccount", new { id = Model.Id })">BankAccount</a>
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

