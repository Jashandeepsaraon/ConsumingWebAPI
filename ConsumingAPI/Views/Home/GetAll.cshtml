@model List<HouseholdsViewModel>
@{
    ViewBag.Title = "GetAll";
}

<h2>GetAll</h2>
<div>
    <section class="section-padding wow fadeInUp delay-05s">
        <div class="container" style="margin-left: 10px;">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="service-title pad-bt15">Latest Project</h2>
                    <hr class="bottom-line">
                </div>
                @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                {
                    <a href="@Url.Action("CreateProject", "Projects")">Create</a>
                }

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>DateCreated</th>
                            <th>DateUpdated</th>
                            <th>Owner</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.Name</td>
                                <td>@record.Description</td>      
                                <td>@record.DateCreated</td>
                                <td>@record.DateUpdated</td>
                                <td>@record.OwnerId</td>
                                @*<td>                                   
                                        <a href="@Url.Action("Edit", "Projects", new { id = record.Id })">Edit</a>                                  
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                    {
                                        <a href="@Url.Action("EditMembers", "Projects", new { id = record.Id })">Edit Members</a>
                                    }
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                    {
                                        <form method="post" action="@Url.Action("Delete", "Projects", new { id = record.Id })">
                                            <button>Delete</button>
                                        </form>
                                        <br />
                                        <form method="post" action="@Url.Action("Archive", "Projects", new { id = record.Id })">
                                            <button>Archive</button>
                                        </form>
                                    }
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
