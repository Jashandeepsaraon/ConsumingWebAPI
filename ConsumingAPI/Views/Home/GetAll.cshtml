@model List<HouseholdsViewModel>
@{
    ViewBag.Title = "GetAll";
}

<div>
    <section class="section-padding wow fadeInUp delay-05s">
        <div class="container" style="margin-left: 10px;">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2 class="service-title pad-bt15">Latest HouseHold</h2>
                    <hr class="bottom-line">
                </div>
                <a href="@Url.Action("CreateHouseHold","Home")">Create</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>DateCreated</th>
                            <th>DateUpdated</th>
                            <th>Owner</th>
                            <th>Edit</th>
                            <th>InviteUsers</th>
                            <th>Join household</th>
                            <th>Delete/Leave</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.Name</td>
                                <td>@record.Description</td>
                                <td>@record.DateCreated</td>
                                <td>@record.DateUpdated</td>
                                <td>@record.OwnerId</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Home", new { id = record.Id })">Edit</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("InviteUsers", "Home", new { id = record.Id })">Invite Users</a>
                                </td>
                                <td>
                                    <form method="post" action="@Url.Action("JoinHouseHold", "Home", new { id = record.Id })">
                                        <button>Join HouseHold</button>
                                    </form>
                                </td>
                                <td>
                                    <form method="post" action="@Url.Action("Delete", "Home", new { id = record.Id })">
                                         <button>Delete/LeaveHouseHold</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
